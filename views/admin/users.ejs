<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/admin/css/style.css">
</head>
<body>
    <%-include('../../partials/admin/header.ejs')%>

    <section id="mid">
        <div class="container-fluid">
            <div class="row">
                <%-include('../../partials/admin/left.ejs')%>
                <div class="col-md-9 mt-4">
                    <h2 class="text-center">Users Management</h2><br>
                    <table class="table table-hover">
                        <tr>
                            <th>S.No.</th>
                            <th>Users</th>
                            <th>Status</th>
                            <th>User's Role</th>
                            <th>Action</th>
                        </tr>
                        <%record.forEach((result,key)=>{%>
                            <tr>
                                <td><%=key+1%></td>
                                <td><%=result.email%></td>
                                <td><%=result.status%></td>
                                <%if(result.role=='suscribed'){%>
                                    <td><a href="/admin/roleupdate/<%=result.id%>"><button class="btn btn-success"><%=result.role%></button></a></td>
                                <%}else{%>
                                    <td><a href="/admin/roleupdate/<%=result.id%>"><button class="btn btn-danger"><%=result.role%></button></a></td>
                               <%}%>
                                <td><a href="/admin/userdelete/<%=result.id%>"><i class="bi bi-trash3"></i></a></td>
                            </tr>
                        <%})%>

                    </table>
                </div>
            </div>
        </div>
    </section>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>